package main

import (
	"context"
	"github.com/VladimirGladky/FinalTaskFirstSprint/internal/app"
	"github.com/VladimirGladky/FinalTaskFirstSprint/internal/config"
	service2 "github.com/VladimirGladky/FinalTaskFirstSprint/internal/orchestrator/service"
	"github.com/VladimirGladky/FinalTaskFirstSprint/pkg/logger"
	"go.uber.org/zap"
)

func main() {
	ctx, cancel := context.WithCancel(context.Background())
	defer cancel()
	cfg, err := config.NewConfig()
	if err != nil {
		logger.GetLoggerFromCtx(ctx).Error("error loading config: %v", zap.Error(err))
		return
	}
	ctx, _ = logger.New(ctx)
	srv := service2.NewService(ctx)
	application := app.New(cfg, ctx, srv)
	application.MustRun()
}
